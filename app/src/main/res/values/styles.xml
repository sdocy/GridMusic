<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:listDivider">@color/dividerBlue</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/highlightBlue</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:popupBackground">@drawable/dark_bg</item>
    </style>

    <style name="mainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dark_bg</item>
        <item name="android:textSize">@dimen/mainButtonText</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:lines">2</item>
        <item name="android:textColor">@color/MainMenuTextColor</item>
    </style>

    <style name="saveButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dark_bg</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/MainMenuTextColor</item>
    </style>

    <style name="musicControl">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_margin">@dimen/musicControlMargin</item>
    </style>

    <style name="backArrow">
        <item name="android:layout_width">@dimen/settingsIconDimen</item>
        <item name="android:layout_height">@dimen/settingsIconDimen</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">#000000</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/arrow</item>
    </style>

    <style name="settingsButton">
        <item name="android:layout_width">@dimen/settingsIconDimen</item>
        <item name="android:layout_height">@dimen/settingsIconDimen</item>
        <item name="android:background">#000000</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/settings</item>
    </style>

    <style name="infoButton">
        <item name="android:layout_width">@dimen/settingsIconDimen</item>
        <item name="android:layout_height">@dimen/settingsIconDimen</item>
        <item name="android:background">#000000</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/information</item>
    </style>

    <style name="settingsOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/myBlue</item>
        <item name="android:textSize">@dimen/settingsText</item>
        <item name="android:layout_margin">@dimen/gridMargin</item>
    </style>

    <style name="downloadArtInfoMsg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/highlightBlue</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="saveMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/highlightBlue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="downloadArtRetMsg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/mainButtonText</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/errorRed</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="coverArtView">
        <item name="android:layout_width">@dimen/gridElemDimen</item>
        <item name="android:layout_height">@dimen/gridElemDimen</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="coverArtCheckMarkView">
        <item name="android:layout_width">@dimen/checkMarkDimen</item>
        <item name="android:layout_height">@dimen/checkMarkDimen</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:src">@drawable/check</item>
    </style>
</resources>
