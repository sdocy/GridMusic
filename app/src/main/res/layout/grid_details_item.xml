<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/gridPadding"
    tools:context="com.example.android.gridmusic.CreateGridActivity">

    <TextView
        android:id="@+id/gridDetails_ArtistName"
        android:maxLines="1"
        android:maxLength="15"
        android:textColor="@color/highlightBlue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:ignore="SelectableText" />

    <TextView
        android:id="@+id/gridDetails_Sep1"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:ignore="SelectableText" />

    <TextView
        android:id="@+id/gridDetails_AlbumName"
        android:maxLines="1"
        android:maxLength="15"
        android:textColor="@color/highlightBlue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:ignore="SelectableText" />

    <TextView
        android:id="@+id/gridDetails_Sep2"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:ignore="SelectableText" />

    <TextView
        android:id="@+id/gridDetails_SongName"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/highlightBlue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:ignore="SelectableText" />
</LinearLayout>
